<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facebook_gradient_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Status Bar Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- Facebook Logo -->
    <ImageView
        android:id="@+id/ivFacebookLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/facebook_logo"
        android:layout_marginBottom="48dp" />

    <!-- Language Selection -->
    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="English · Change"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="48dp" />


    <!-- Login Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">

        <!-- Username Input -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_bottom_border_selector"
            android:hint="Username"
            android:textColorHint="#B0FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="16dp"
            android:inputType="text"
            android:layout_marginBottom="24dp"
            android:singleLine="true"
            android:imeOptions="actionNext" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_bottom_border_selector"
            android:hint="Password"
            android:textColorHint="#B0FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="16dp"
            android:inputType="textPassword"
            android:layout_marginBottom="32dp"
            android:singleLine="true"
            android:imeOptions="actionDone" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/login_button_bg"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up for Facebook"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Forgot Password -->
        <!-- Use constraint layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Icon bên phải -->
            <ImageView
                android:id="@+id/imgHelp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_help"
                app:tint="#FFFFFF"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

</LinearLayout>